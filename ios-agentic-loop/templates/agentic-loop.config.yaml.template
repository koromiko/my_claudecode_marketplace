# Agentic Testing Loop Configuration
# Copy this file to your project root as `agentic-loop.config.yaml`
# and fill in your project-specific values.

# Simulator settings
simulator:
  device: "iPhone 16 Pro"        # Simulator device name
  runtime: "iOS 18.2"            # iOS runtime version
  udid: auto                     # "auto" detects booted simulator

# App settings
app:
  bundle_id: "YOUR_BUNDLE_ID"    # e.g., "com.example.myapp"
  extension_bundle_ids: []       # e.g., ["com.example.myapp.keyboard"]
  build_command: "xcodebuild -scheme YOUR_SCHEME -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPhone 16 Pro' build"
  app_group: ""                  # e.g., "group.com.example.myapp"

# idb settings
idb:
  action_delay_ms: 500           # Delay after each action (ms). Use 600-800 for SwiftUI.
  describe_all_timeout_ms: 5000  # Timeout for accessibility tree fetch (ms)

# Loop settings
loop:
  max_steps_per_goal: 30         # Max steps before giving up on a goal
  max_retries_per_action: 3      # Retry failed actions this many times
  verify_timeout_ms: 2000        # Wait for UI to settle before verify (ms)

# Maestro settings
maestro:
  output_dir: "tests/maestro/flows"
  prefer_id_selectors: true      # Use id: over text: when available
  include_ai_assertions: true    # Add assertWithAI for complex checks

# Artifact settings
artifacts:
  results_dir: "tests/agentic/results"
  keep_last_n_runs: 10           # Auto-cleanup old results
